<style type="text/css">
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    }
  }
  .template-404 .title + * {
    margin-top: 1rem;
  }
  .template-404 p {
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 30px;
  }
  @media screen and (min-width: 768px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class="template-404 page-width center section-{{ section.id }}-padding">
  <h1 class="title">
    {{ 'templates.404.subtext' | t }} {{ 'templates.404.title' | t }}
  </h1>
  <p>{{ 'templates.404.subinnertext' | t }}</p>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    <span>{{ 'general.continue_shopping' | t }}</span>
  </a>
</div>
{% schema %}
{
  "name": "t:sections.main-404.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ]
}
{% endschema %}